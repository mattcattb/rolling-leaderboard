{
  "name": "@mattycatty/rolling-leaderboard",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Headless rolling leaderboard engine with pluggable storage adapters.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattcattb/rolling-leaderboard.git"
  },
  "homepage": "https://github.com/mattcattb/rolling-leaderboard#readme",
  "bugs": {
    "url": "https://github.com/mattcattb/rolling-leaderboard/issues"
  },
  "keywords": ["leaderboard", "redis", "ranking", "typescript"],
  "engines": {
    "node": ">=18"
  },
  "sideEffects": false,
  "files": ["dist"],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsc --build",
    "clean": "rm -rf dist *.tsbuildinfo",
    "test": "bun test ./test",
    "test:integration": "RUN_INTEGRATION=1 bun test ./test"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/bun": "^1.3.5",
    "@types/node": "^24.10.4",
    "redis": "^5.10.0",
    "testcontainers": "^11.11.0",
    "typescript": "^5.9.3"
  }
}
